{
    "name": "atlas/table",
    "type": "library",
    "description": "Table data gateway implementation for Atlas.",
    "keywords": [ "sql", "table", "data", "gateway", "mapper", "mapping", "orm" ],
    "homepage": "http://github.com/atlasphp/Atlas.Table",
    "license": "MIT",
    "authors": [
        {
            "name": "Atlas Contributors",
            "homepage": "https://github.com/atlasphp/Atlas.Table/contributors"
        }
    ],
    "require": {
        "php": "^8.0",
        "atlas/query": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Atlas\\Table\\": "src/"
        }
    },
    "require-dev": {
        "atlas/testing": "dev-2.x-wip",
        "pds/skeleton": "^1.0",
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Atlas\\Table\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "stan": "./vendor/bin/phpstan analyze -c phpstan.neon --memory-limit=1G src",
        "testan": "composer test && composer stan"
    },
    "suggest": {
        "atlas/skeleton": "A command-line tool to build skeleton classes."
    }
}
